<h2><%= currentUser.name %>'s Profile</h2>

<%favHikes.forEach(h=>{ %>  
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
    <img class="card-img" src="<%=h.photo%>" >
    </div>
    <div class="col-md-8">
    <div class="card-body">
    <h5 class="card-title"><%=h.name%><h5>    
    <p><%=h.location%></p>
    <p class="card-text"><%=h.summary%></p>
    <form method="POST" action="/favorites/<%=h.id%>/?_method=DELETE">
    <input type="submit" value ="Delete" class="btn btn-primary">
    </form>
</div>  
</div>
</div> 
</div>


<form method="POST" action="/favorites/<%=h.id%>/?_method=PUT">
<label for="content">Journal Entry</label>
<textarea type="text" id="content" name="comment"></textarea>
<input type="submit" value = "Edit">
<input type="submit" value = "Submit">
</form>


 

<% })%>
